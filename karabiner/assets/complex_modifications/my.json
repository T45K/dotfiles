{
    "title": "emacs-like",
    "rules": [
      {
        "description": "ctrl-fbpn to cursor",
        "manipulators": [
          {
            "type": "basic",
            "from": {
              "key_code": "f",
              "modifiers": {
                "mandatory": [
                  "control",
                  "command"
                ],
                "optional": [
                  "any"
                ]
              }
            },
            "to": [
              {
                "key_code": "f",
                "modifiers": [
                  "control",
                  "command"
                ]
              }
            ]
          },
          {
            "type": "basic",
            "from": {
              "key_code": "f",
              "modifiers": {
                "mandatory": [
                  "control"
                ],
                "optional": [
                  "any"
                ]
              }
            },
            "to": [
              {
                "repeat": true,
                "key_code": "right_arrow"
              }
            ]
          },
          {
            "type": "basic",
            "from": {
              "modifiers": {
                "mandatory": [
                  "control"
                ],
                "optional": [
                  "any"
                ]
              },
              "key_code": "b"
            },
            "to": [
              {
                "repeat": true,
                "key_code": "left_arrow"
              }
            ]
          },       
          {
            "type": "basic",
            "from": {
              "key_code": "p",
              "modifiers": {
                "mandatory": [
                  "control"
                ],
                "optional": [
                  "any"
                ]
              }
            },
            "to": [
              {
                "repeat": true,
                "key_code": "up_arrow"
              }
            ]
          },        {
            "type": "basic",
            "from": {
              "modifiers": {
                "mandatory": [
                  "control"
                ],
                "optional": [
                  "any"
                ]
              },
              "key_code": "n"
            },
            "to": [
              {
                "repeat": true,
                "key_code": "down_arrow"
              }
            ]
          }
        ]
      },
      {
        "description": "ctrl-q to esc",
        "manipulators": [
          {
            "type": "basic",
            "from": {
              "key_code": "q",
              "modifiers": {
                "mandatory": [
                  "control",
                  "command"
                ],
                "optional": [
                  "any"
                ]
              }
            },
            "to": [
              {
                "key_code": "q",
                "modifiers": [
                  "control",
                  "command"
                ]
              }
            ]
          },
          {
            "type": "basic",
            "from": {
              "key_code": "q",
              "modifiers": {
                "mandatory": [
                  "control"
                ],
                "optional": [
                  "any"
                ]
              }
            },
            "to": [
              {
                "key_code": "escape"
              }
            ]
          }
        ]
      }
    ]
  }
